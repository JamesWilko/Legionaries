<root>

	<styles>
		<!-- <include src="file://{resources}/styles/dotastyles.css" /> -->
		<include src="file://{resources}/styles/custom_game/mercenaries.css" />
	</styles>

	<scripts>
		<include src="file://{resources}/scripts/custom_game/mercenary_item.js" />
	</scripts>

	<Panel class="UpgradePanel">
		<Button class="UpgradeButton"
			onmouseover="ShowTooltip( $.GetContextPanel() )"
			onmouseout="HideTooltip( $.GetContextPanel() )"
			onactivate="PurchaseMercenary( $.GetContextPanel() )">
				<Image class="UpgradeImage" id="UpgradeImage" src="file://{images}/custom_game/mercs/merc_satyr.psd" />
		</Button>
		<Panel class="Cooldown" id="Cooldown" hittest="false">
			<Panel class="CooldownOverlay" id="CooldownOverlay" hittest="false"/>
			<Label class="CooldownTimer" id="CooldownTimer" hittest="false"/>
		</Panel>
		<Panel class="UpgradeCost" hittest="false">
			<Image class="UpgradeCostIcon" id="CostImage" src="file://{images}/custom_game/icons/icon_gems_small.png" hittest="false" />
			<Label class="UpgradeCostText" id="CostText" text="??" hittest="false" />
		</Panel>
	</Panel>

</root>
