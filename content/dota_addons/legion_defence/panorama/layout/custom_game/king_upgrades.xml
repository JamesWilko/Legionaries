<root>

	<styles>
		<!-- <include src="file://{resources}/styles/dotastyles.css" /> -->
		<include src="file://{resources}/styles/custom_game/king_upgrades.css" />
	</styles>

	<scripts>
		<include src="file://{resources}/scripts/custom_game/king_upgrades.js" />
	</scripts>

	<Panel>

		<Panel class="KingUpgradesPanel" hittest="false">

			<Panel class="UpgradePanel" id="UpgradePanel-attack">
				<Button class="UpgradeButton"
								onmouseover="UpgradeShowTooltip( 'attack' )"
								onmouseout="UpgradeHideTooltip( 'attack' )"
								onactivate="UpgradeAbility( 'attack' )"
								>
						<DOTAItemImage hittest="false" class="UpgradeImage" id="UpgradeImage-attack" itemname="item_claymore" />
				</Button>
				<Panel class="UpgradeCost">
					<Image class="UpgradeCostIcon" id="UpgradeCostIcon-attack" src="file://{images}/custom_game/icons/icon_gems_small.png" />
					<Label class="UpgradeCostText" id="UpgradeCostText-attack" text="??" />
				</Panel>
			</Panel>

			<Panel class="UpgradePanel" id="UpgradePanel-health">
				<Button class="UpgradeButton"
								onmouseover="UpgradeShowTooltip( 'health' )"
								onmouseout="UpgradeHideTooltip( 'health' )"
								onactivate="UpgradeAbility( 'health' )"
								>
						<DOTAItemImage hittest="false" class="UpgradeImage" id="UpgradeImage-health" itemname="item_vitality_booster" />
				</Button>
				<Panel class="UpgradeCost">
					<Image class="UpgradeCostIcon" id="UpgradeCostIcon-health" src="file://{images}/custom_game/icons/icon_gems_small.png" />
					<Label class="UpgradeCostText" id="UpgradeCostText-health" text="??" />
				</Panel>
			</Panel>

			<Panel class="UpgradePanel" id="UpgradePanel-regen">
				<Button class="UpgradeButton"
								onmouseover="UpgradeShowTooltip( 'regen' )"
								onmouseout="UpgradeHideTooltip( 'regen' )"
								onactivate="UpgradeAbility( 'regen' )"
								>
						<DOTAItemImage hittest="false" class="UpgradeImage" id="UpgradeImage-regen" itemname="item_ring_of_regen" />
				</Button>
				<Panel class="UpgradeCost">
					<Image class="UpgradeCostIcon" id="UpgradeCostIcon-regen" src="file://{images}/custom_game/icons/icon_gems_small.png" />
					<Label class="UpgradeCostText" id="UpgradeCostText-regen" text="??" />
				</Panel>
			</Panel>

			<Panel class="UpgradePanel" id="UpgradePanel-armour">
				<Button class="UpgradeButton"
								onmouseover="UpgradeShowTooltip( 'armour' )"
								onmouseout="UpgradeHideTooltip( 'armour' )"
								onactivate="UpgradeAbility( 'armour' )"
								>
						<DOTAItemImage hittest="false" class="UpgradeImage" id="UpgradeImage-armour" itemname="item_platemail" />
				</Button>
				<Panel class="UpgradeCost">
					<Image class="UpgradeCostIcon" id="UpgradeCostIcon-armour" src="file://{images}/custom_game/icons/icon_gems_small.png" />
					<Label class="UpgradeCostText" id="UpgradeCostText-armour" text="??" />
				</Panel>
			</Panel>

			<Panel class="UpgradePanel" id="UpgradePanel-heal">
				<Button class="UpgradeButton"
								onmouseover="UpgradeShowTooltip( 'heal' )"
								onmouseout="UpgradeHideTooltip( 'heal' )"
								onactivate="UpgradeAbility( 'heal' )"
								>
						<DOTAItemImage hittest="false" id="UpgradeImage-heal" itemname="item_cheese" />
				</Button>
				<Panel class="UpgradeCostNoIcon">
					<Label class="UpgradeCostTextNoIcon" id="UpgradeCostText-heal" text="x?" />
				</Panel>
			</Panel>

		</Panel>

		<Panel id="tooltip" hittest="false"/>

	</Panel>

</root>
