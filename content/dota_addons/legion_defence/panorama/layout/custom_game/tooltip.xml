<root>

	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/custom_game/tooltip.css" />
		<include src="file://{resources}/styles/custom_game/colours.css" />
	</styles>

	<scripts>
		<include src="file://{resources}/scripts/custom_game/tooltip.js" />
	</scripts>

	<Panel class="TooltipContainer" hittest="false">

		<Panel id="Tooltip" class="TooltipPanel" hittest="false">

			<Label class="TooltipTitle" id="TooltipTitle" text="Upgrade Attack" hittest="false"/>
			<Label class="TooltipDesc" id="TooltipDesc" text="Upgrades the king's attack to deal more damage with every hit." hittest="false"/>
			<Panel class="Spacer" hittest="false"/>

			<Panel class="TooltipValue" id="TooltipValue1" hittest="false">
				<Label text="VALUE ONE:" id="TooltipValue1Name" hittest="false"/>
				<Label text="1" id="TooltipValue1Value" hittest="false"/>
			</Panel>

			<Panel class="TooltipValue" id="TooltipValue2" hittest="false">
				<Label text="VALUE TWO:" id="TooltipValue2Name" hittest="false"/>
				<Label text="2" id="TooltipValue2Value" hittest="false"/>
			</Panel>

			<Panel class="TooltipValue" id="TooltipValue3" hittest="false">
				<Label text="VALUE THREE:" id="TooltipValue3Name" hittest="false"/>
				<Label text="3" id="TooltipValue3Value" hittest="false"/>
			</Panel>

			<Panel class="TooltipValue" id="TooltipValue4" hittest="false">
				<Label text="VALUE FOUR:" id="TooltipValue4Name" hittest="false"/>
				<Label text="4" id="TooltipValue4Value" hittest="false"/>
			</Panel>

			<Panel class="Cooldown" id="CooldownParent">
				<Image id="CooldownImage" class="CooldownImage" src="file://{images}/hud/cooldown.png" hittest="false" />
				<Label id="CooldownText" class="CooldownText" text="20"/>
			</Panel>

		</Panel>

	</Panel>

</root>
